<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/question_marginV"
    android:layout_marginBottom="@dimen/question_marginV"
    android:backgroundTint="@color/colorPink"
    android:minHeight="65dp"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/question_padding"
        android:backgroundTint="@color/colorMain"
        android:minHeight="63dp"
        app:cardCornerRadius="@dimen/question_card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/palmares_card_padding"
            android:layout_marginEnd="@dimen/question_layout_padding"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/reponse"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/colorMain"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:text="@string/reponse_1"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/selectAnswerButton"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:buttonTint="@color/colorPink"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>