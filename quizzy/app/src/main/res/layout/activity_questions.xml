<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorHeader"
            android:gravity="center_horizontal"
            android:paddingEnd="@dimen/header_padding_end"
            android:textAlignment="center"
            app:buttonGravity="top"
            app:title="@string/number_question" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/parties"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:text="@string/question"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/question_marginV"
                android:layout_marginBottom="@dimen/question_marginV"
                android:backgroundTint="@color/colorPink"
                app:cardCornerRadius="@dimen/question_card_corner_radius">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/question_padding"
                    android:backgroundTint="@color/colorMain"
                    app:cardCornerRadius="@dimen/question_card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/palmares_card_padding"
                        android:layout_marginEnd="@dimen/question_layout_padding"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/reponse1"
                            android:layout_width="175dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@color/colorMain"
                            android:gravity="center_vertical"
                            android:text="@string/reponse_1"
                            android:textColor="@color/colorWhite"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/radioButton1"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMain"
                            android:buttonTint="@color/colorPink"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/question_marginV"
                android:layout_marginBottom="@dimen/question_marginV"
                android:backgroundTint="@color/colorPink"
                app:cardCornerRadius="@dimen/question_card_corner_radius">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/question_padding"
                    android:backgroundTint="@color/colorMain"
                    app:cardCornerRadius="@dimen/question_card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/palmares_card_padding"
                        android:layout_marginEnd="@dimen/question_layout_padding"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/reponse2"
                            android:layout_width="175dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@color/colorMain"
                            android:gravity="center_vertical"
                            android:text="@string/reponse_2"
                            android:textColor="@color/colorWhite"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMain"
                            android:buttonTint="@color/colorPink"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:textSize="24sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/question_marginV"
                android:layout_marginBottom="@dimen/question_marginV"
                android:backgroundTint="@color/colorPink"
                app:cardCornerRadius="@dimen/question_card_corner_radius">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/question_padding"
                    android:backgroundTint="@color/colorMain"
                    app:cardCornerRadius="@dimen/question_card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/palmares_card_padding"
                        android:layout_marginEnd="@dimen/question_layout_padding"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/reponse3"
                            android:layout_width="175dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@color/colorMain"
                            android:gravity="center_vertical"
                            android:text="@string/reponse_3"
                            android:textColor="@color/colorWhite"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMain"
                            android:buttonTint="@color/colorPink"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:textSize="24sp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_marginV"
                android:layout_marginBottom="@dimen/question_marginV"
                android:backgroundTint="@color/colorPink"
                app:cardCornerRadius="@dimen/question_card_corner_radius">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/question_padding"
                    android:backgroundTint="@color/colorMain"
                    app:cardCornerRadius="@dimen/question_card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/palmares_card_padding"
                        android:layout_marginEnd="@dimen/question_layout_padding"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/reponse4"
                            android:layout_width="175dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@color/colorMain"
                            android:gravity="center_vertical"
                            android:text="@string/reponse_4"
                            android:textColor="@color/colorWhite"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/radioButton4"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMain"
                            android:buttonTint="@color/colorPink"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>